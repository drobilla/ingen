#!/usr/bin/env python
import Params

def build(bld):
	obj = bld.create_obj('cpp', 'shlib')
	obj.source = '''
		Module.cpp
		global.cpp
	'''
	obj.includes = ['..', '../common']
	obj.defines  = 'INGEN_MODULE_DIR=\\\"' + bld.env()['PREFIX'] + 'lib/ingen/\\\"'
	obj.name     = 'libingen_module'
	obj.target   = 'ingen_module'
	obj.vnum     = '0.0.0'
	obj.uselib   = 'GLIBMM SLV2 RAUL REDLANDMM'

