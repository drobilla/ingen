#!/usr/bin/env python
import Params

def build(bld):
	obj = bld.create_obj('cpp', 'shlib')
	obj.source = '''
		Builder.cpp
		ClashAvoider.cpp
		LV2Features.cpp
		LV2URIMap.cpp
		OSCSender.cpp
		Store.cpp
	'''
	obj.includes = ['../', '../common']
	obj.name     = 'libingen_shared'
	obj.target   = 'ingen_shared'
	obj.vnum     = '0.0.0'
	obj.uselib   = 'GLIBMM LV2CORE SLV2 RAUL REDLANDMM'

